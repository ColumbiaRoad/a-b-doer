{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "jsx": "preserve",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
  },
  "exclude": ["node_modules",  ".git", "**/.build/*", "**/node_modules/*"]
}
